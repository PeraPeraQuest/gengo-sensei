#!/usr/bin/env bash
# start-gengo-sensei

export BIND_ADDRESS_AND_PORT="0.0.0.0:3001"
export MARIADB_URL="mysql://root:hunter2@127.0.0.1:3306/"
export MONGODB_URL="mongodb://127.0.0.1:27017/?authSource=admin"
export RUST_LOG="debug"

TIMESTAMP=$(date +%s)

kill -9 "$(< gengo-sensei.pid)"
cargo build
cargo run 1>gengo-sensei-${TIMESTAMP}.log.1 2>gengo-sensei-${TIMESTAMP}.log.2 &
echo $! >gengo-sensei.pid
